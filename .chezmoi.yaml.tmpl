{{- /* Assume interactivity */ -}}
{{- $interactive := true -}}

{{- /* Detect headless */ -}}
{{- if env "HEADLESS" -}}
{{- $interactive = false -}}
{{- end -}}

{{- /* Detect GitHub Codespaces and VSCode remote containers */ -}}
{{- if or (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") -}}
{{- $interactive = false -}}
{{- end -}}

{{- $user := env "USERNAME" | default (env "USER") -}}
{{- if empty $user -}}
{{- if $interactive -}}
{{- $user = promptString "Username" }}
{{- else -}}
{{- $user = .chezmoi.username -}}
{{- end -}}
{{- end -}}

{{- $name := env "NAME" -}}
{{- if empty $name -}}
{{- if $interactive -}}
{{- $name = promptString "Name" }}
{{- else -}}
{{- $name = .chezmoi.username -}}
{{- end -}}
{{- end -}}

{{- $email := env "EMAIL" -}}
{{- if empty $email -}}
{{- if $interactive -}}
{{- $email = promptString "Email" }}
{{- else -}}
{{- $email = printf "%s@%s" .chezmoi.username .chezmoi.fullHostname -}}
{{- end -}}
{{- end -}}

sourceDir: "{{ .chezmoi.sourceDir }}"
data:
  user: "{{ $user }}"
  name: "{{ $name }}"
  email: "{{ $email }}"